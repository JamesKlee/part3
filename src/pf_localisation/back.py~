#!/usr/bin/env python

import rospy
import math
import time

from geometry_msgs.msg import Vector3, Twist
from sensor_msgs.msg import LaserScan

publishMotor = rospy.Publisher('cmd_vel', Twist)
rospy.init_node('Test_Drive')

SPEED = 1
ROTATE = math.pi/4

start = time.time()
while (time.time() - start) * SPEED <= 1.0:
	move = Twist(Vector3(SPEED,0,0), Vector3(0,0,0))
	publishMotor.publish(move)
	time.sleep(0.1)

start = time.time()
while (time.time() - start) * ROTATE <= math.pi/2:
	move = Twist(Vector3(0,0,0), Vector3(0,0,-ROTATE))
	publishMotor.publish(move)
	time.sleep(0.1)

start = time.time()
while (time.time() - start) * SPEED <=  3:
	move = Twist(Vector3(SPEED,0,0), Vector3(0,0,0))
	publishMotor.publish(move)
	time.sleep(0.1)

start = time.time()
while (time.time() - start) * ROTATE <=  math.pi:
	move = Twist(Vector3(0,0,0), Vector3(0,0,ROTATE))
	publishMotor.publish(move)
	time.sleep(0.1)
